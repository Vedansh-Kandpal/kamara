extends base

block content
  main.main
    .card-container
    
      each room in rooms
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/room/${room.imageCover}`, alt=`${room.city}`)
            h3.heading-tertirary
              span= room.city

          .card__details
            //- h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
            p.card__text= room.summary
            .card__data
              //- svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= room.state 
              //- span="BHK"
            .card__data
              //- svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= room.address
            .card__data
              //- svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span= room.pin
            .card__data
              //- svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `${room.BHK }BHK`

          .card__footer
            p
              span.card__footer-value= `${room.price}`
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= room.rating
              | 
              span.card__footer-text= `rating (${room.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/room/${room.slug}`) Details