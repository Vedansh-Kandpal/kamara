<%- include('partials/_startHtm') %>

    <%- include('partials/_header') %>

            <main class="main">
                <div  class="card-container">
                    <% for (let room=0; room<rooms.length; room++ ) { %>
                    <div class="card">
                        <div class="card__header">
                            <div class="card__picture">
                                <div class="card__picture-overlay">&nbsp;</div>
                                <img src= "img/room/room-3.jpg",class="card__picture-img" />
                            </div>
                    
                            <h3 class="heading-tertirary">
                                <span >
                                    <%= rooms[room].city %>
                                </span>
                            </h3>
                        </div>
                    
                        <div class="card__details">
                            <h4 class="card__sub-heading">Easy 5-day tour</h4>
                            <p class="card__text">
                                <%= rooms[room].address %>
                            </p>
                            <div class="card__data">
                                <svg class="card__icon">
                                    <use xlink:href="img/icons.svg#icon-map-pin"></use>
                                </svg>
                                <span><%= rooms[room].BHK %> BHK</span>
                                
                            </div>
                            <div class="card__data">
                                <svg class="card__icon">
                                    <use xlink:href="img/icons.svg#icon-calendar"></use>
                                </svg>
                                <span>April 2021</span>
                            </div>
                            <div class="card__data">
                                <svg class="card__icon">
                                    <use xlink:href="img/icons.svg#icon-flag"></use>
                                </svg>
                                <span>3 stops</span>
                            </div>
                            <div class="card__data">
                                <svg class="card__icon">
                                    <use xlink:href="img/icons.svg#icon-user"></use>
                                </svg>
                                <span>25 people</span>
                            </div>
                        </div>
                    
                        <div class="card__footer">
                            <p>
                                <span class="card__footer-value"><%= rooms[room].price %></span>
                                <span class="card__footer-text">per Month</span>
                            </p>
                            <p class="card__ratings">
                                <span class="card__footer-value"><%= rooms[room].rating %></span>
                                <span class="card__footer-text">ratings(21)</span>
                            </p>
                            <a href="/" class="btn btn--green btn--small">Details</a>
                        </div>
                    </div>
                    <% } %>

                </div>
            </main>   
         

        
        
<%- include('partials/_footer') %>